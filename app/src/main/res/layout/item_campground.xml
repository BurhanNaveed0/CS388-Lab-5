<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardContainer"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:padding="8dp"
    android:background="@android:color/white"
    android:elevation="3dp">

    <ImageView
        android:id="@+id/cardImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Campground photo"
        android:scaleType="centerCrop"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/cardTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Campground Title"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/cardImageView"
        app:layout_constraintTop_toTopOf="@id/cardImageView"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/cardLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Campground Location"
        android:textStyle="italic"
        android:textSize="14sp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="@id/cardTitle"
        app:layout_constraintTop_toBottomOf="@id/cardTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/cardDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="A short description of the campground goes here."
        android:maxLines="3"
        android:ellipsize="end"
        android:textSize="13sp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="@id/cardTitle"
        app:layout_constraintTop_toBottomOf="@id/cardLocation"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
